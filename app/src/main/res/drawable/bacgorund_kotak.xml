<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Warna latar belakang -->
    <solid android:color="@color/coklat_abu_abu" /> <!-- Ganti warna sesuai kebutuhan -->

    <!-- Radius untuk sudut melengkung -->
    <corners android:radius="10dp" /> <!-- Atur radius sesuai preferensi -->

    <!-- Garis batas (border) -->
    <stroke android:color="@color/coklat_abu_abu" /> <!-- Ganti warna sesuai kebutuhan -->

    <!-- Padding dalam -->
    <padding
        android:bottom="1dp"
        android:left="50dp"
        android:right="50dp"
        android:top="1dp" />
</shape>
