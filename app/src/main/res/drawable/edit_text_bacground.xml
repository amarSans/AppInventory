<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Warna latar belakang -->
    <solid android:color="#ffffff" /> <!-- Ganti warna sesuai kebutuhan -->

    <!-- Radius untuk sudut melengkung -->
    <corners android:radius="10dp" /> <!-- Atur radius sesuai preferensi -->

    <!-- Garis batas (border) -->
    <stroke
        android:width="1dp"
        android:color="#D9D9D9" /> <!-- Ganti warna sesuai kebutuhan -->

    <!-- Padding dalam -->
    <padding
        android:bottom="6dp"
        android:left="10dp"
        android:right="10dp"
        android:top="6dp" />
</shape>
