<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CustomTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundMode">outline</item>
        <item name="boxStrokeColor">@color/custom_stroke_color</item>

        <!-- Warna label/hint saat fokus dan tidak fokus -->
        <item name="hintTextColor">?attr/colorOnSecondary</item>

        <!-- Warna teks yang diketik -->
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <!-- Warna placeholder (jika belum ada teks) -->
        <item name="android:textColorHint">?attr/colorOnSecondary</item>

        <!-- Warna label saat aktif (floating label) -->
        <item name="helperTextTextColor">?attr/colorOnSecondary</item>
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
    </style>
</resources>