<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp">

        <!-- Bubble Chat untuk History -->
        <LinearLayout
            android:id="@+id/chatBubble"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_chat_bubble_blue"
            android:padding="12dp"
            android:elevation="2dp"
            android:layout_marginEnd="8dp">
                <TextView
                    android:id="@+id/tvHistoryDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2025-04-01"
                    android:textSize="10sp"
                    android:textColor="@color/textColornight"
                    android:layout_gravity="start"
                    android:layout_marginTop="4dp"/>


                <TextView
                    android:id="@+id/tvHistoryText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Barang ABC ditambahkan sebanyak 10 pcs"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:maxWidth="250dp"/>
        </LinearLayout>
</LinearLayout>
