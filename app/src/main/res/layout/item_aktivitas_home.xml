<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp">

        <ImageView
            android:id="@+id/imageViewAktifitas"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/bg_chat_bubble_green" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="8dp">

            <TextView
                android:id="@+id/tvJenisAktivitas"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Barang Masuk: Sandal Jepit"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvDetailAktivitas"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Jumlah: 10 - 04 April 2025"
                android:textSize="14sp"
                android:textColor="#757575" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
