<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@android:color/white">

    <TextView
        android:id="@+id/item_data_tanggal"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@drawable/header_shape"
        android:text="Tanggal"
        android:fontFamily="@font/poppins_semibold"
        android:textColor="@android:color/black"
        android:textSize="14sp"/>
    <TextView
        android:id="@+id/namaProdukTextView"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:background="@drawable/header_shape"
        android:gravity="center"
        android:fontFamily="@font/poppins_semibold"
        android:text="@string/merek_barang"
        android:textColor="@android:color/black"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/kodeProdukTextView"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:background="@drawable/header_shape"
        android:gravity="center"
        android:text="@string/kode_barang"
        android:fontFamily="@font/poppins_semibold"
        android:textColor="@android:color/black"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/stokTextView"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:background="@drawable/header_shape"
        android:gravity="center"
        android:text="@string/_20"
        android:fontFamily="@font/poppins_semibold"
        android:textColor="@android:color/black"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/hargaTextView"
        android:fontFamily="@font/poppins_semibold"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:background="@drawable/header_shape"
        android:gravity="start"
        android:text="@string/harga_barang"
        android:textColor="@android:color/black"
        android:textSize="14sp" />


</LinearLayout>
